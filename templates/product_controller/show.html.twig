{% extends 'base.html.twig' %}

{% block title %}
  Events
{% endblock %}

{% block body %}
  <h1>Events</h1>

  <table class="table">
    <tbody>
      <tr>
        <th>Id</th>
        <td>{{ product_controller.id }}</td>
      </tr>
      <tr>
        <th>Ename</th>
        <td>{{ product_controller.ename }}</td>
      </tr>
      <tr>
        <th>Date</th>
        <td>{{ product_controller.date ? product_controller.date|date('Y-m-d') : '' }}</td>
      </tr>
      <tr>
        <th>Time</th>
        <td>{{ product_controller.time ? product_controller.time|date('H:i:s') : '' }}</td>
      </tr>
      <tr>
        <th>Image</th>
        <td>{{ product_controller.image }}</td>
      </tr>
      <tr>
        <th>Type</th>
        <td>{{ product_controller.Type }}</td>
      </tr>
      <tr>
        <th>Email</th>
        <td>{{ product_controller.Email }}</td>
      </tr>
      <tr>
        <th>Url</th>
        <td>{{ product_controller.url }}</td>
      </tr>
    </tbody>
  </table>

  <a href="{{ path('app_product_controller_index') }}" class="btn btn-secondary my-3">back to list</a>

  <a href="{{ path('app_product_controller_edit', { id: product_controller.id }) }}" class="btn btn-warning my-3">edit</a>

  {{ include('product_controller/_delete_form.html.twig') }}
{% endblock %}
